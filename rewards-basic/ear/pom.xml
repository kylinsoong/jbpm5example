<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <groupId>org.jbpm.demo</groupId>
   <artifactId>jbpm-rewards-basic-ear</artifactId>
   <version>1.0</version>
  <packaging>ear</packaging>
  
<name>jBPM Demo: rewards-basic-ear</name>

  <parent>
    <groupId>org.jbpm.demo</groupId>
    <artifactId>jbpm-rewards-basic</artifactId>
    <version>1.0</version>
  </parent>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <displayName>rewards-basic</displayName>
          <modules>
            <ejbModule>
              <groupId>org.jbpm.demo</groupId>
              <artifactId>jbpm-rewards-basic-ejb</artifactId>
            </ejbModule>
            <webModule>
              <groupId>org.jbpm.demo</groupId>
              <artifactId>jbpm-rewards-basic-war</artifactId>
              <contextRoot>rewards-basic</contextRoot>
            </webModule>
            <jarModule>
              <groupId>org.drools</groupId>
              <artifactId>knowledge-api</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.drools</groupId>
              <artifactId>drools-core</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.mvel</groupId>
              <artifactId>mvel2</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.drools</groupId>
              <artifactId>drools-compiler</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.eclipse.jdt.core.compiler</groupId>
              <artifactId>ecj</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            
            <jarModule>
              <groupId>org.drools</groupId>
              <artifactId>drools-persistence-jpa</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
           <!-- -->
           <jarModule>
              <groupId>org.antlr</groupId>
              <artifactId>antlr-runtime</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            
            <jarModule>
              <groupId>com.google.protobuf</groupId>
              <artifactId>protobuf-java</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.jbpm</groupId>
              <artifactId>jbpm-flow</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.jbpm</groupId>
              <artifactId>jbpm-flow-builder</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.jbpm</groupId>
              <artifactId>jbpm-bam</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.jbpm</groupId>
              <artifactId>jbpm-bpmn2</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.jbpm</groupId>
              <artifactId>jbpm-human-task</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.jbpm</groupId>
              <artifactId>jbpm-persistence-jpa</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.jbpm</groupId>
              <artifactId>jbpm-workitems</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>

          </modules>
          <jboss>
            <loader-repository>
              demo.com:loader=rewards-basic
            </loader-repository>
            <loader-repository-config>
              java2ParentDelegation=false
            </loader-repository-config>
          </jboss>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jbpm.demo</groupId>
      <artifactId>jbpm-rewards-basic-ejb</artifactId>
      <version>1.0</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>org.jbpm.demo</groupId>
      <artifactId>jbpm-rewards-basic-war</artifactId>
      <version>1.0</version>
      <type>war</type>
    </dependency>
    
    <dependency>
      <groupId>org.mvel</groupId>
      <artifactId>mvel2</artifactId>
      <version>2.1.3.Final</version>
    </dependency>
    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>antlr-runtime</artifactId>
      <version>3.3</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jdt.core.compiler</groupId>
      <artifactId>ecj</artifactId>
      <version>3.5.1</version>
    </dependency>
    <dependency>
      <groupId>com.google.protobuf</groupId>
      <artifactId>protobuf-java</artifactId>
      <version>2.4.1</version>
    </dependency>
  </dependencies>
</project>

